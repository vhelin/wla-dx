echo ***********************
echo * compiling few tools *
echo ***********************

cd wlab
make -f makefile.amiga
move wlab TO /binaries
make -f makefile.amiga clean
/

cd wlad
make -f makefile.amiga
move wlad TO /binaries
make -f makefile.amiga clean
/

echo **************************
echo * compiling WLA binaries *
echo **************************

make -f amiga_make/makefile.amiga.gb clean
make -f amiga_make/makefile.amiga.gb
move wla-gb TO binaries

make -f amiga_make/makefile.amiga.gb clean
make -f amiga_make/makefile.amiga.z80
move wla-z80 TO binaries

make -f amiga_make/makefile.amiga.z80 clean
make -f amiga_make/makefile.amiga.6502
move wla-6502 TO binaries

make -f amiga_make/makefile.amiga.6502 clean
make -f amiga_make/makefile.amiga.65c02
move wla-65c02 TO binaries

make -f amiga_make/makefile.amiga.65c02 clean
make -f amiga_make/makefile.amiga.6510
move wla-6510 TO binaries

make -f amiga_make/makefile.amiga.6510 clean
make -f amiga_make/makefile.amiga.65816
move wla-65816 TO binaries

make -f amiga_make/makefile.amiga.65816 clean
make -f amiga_make/makefile.amiga.spc700
move wla-spc700 TO binaries

make -f amiga_make/makefile.amiga.spc700 clean
make -f amiga_make/makefile.amiga.huc6280
move wla-huc6280 TO binaries

make -f amiga_make/makefile.amiga.huc6280 clean

echo *********************
echo * compiling WLALINK *
echo *********************

cd wlalink
make -f makefile.amiga
make -f makefile.amiga clean
move wlalink TO /binaries
/


echo *********************************************
echo * all done! check binaries/ for the results *
echo *********************************************
